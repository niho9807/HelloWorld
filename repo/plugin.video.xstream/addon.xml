<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.xstream" name="xStream Reborn" version="4.3.0.5" provider-name="xStream Reborn-Team">
	<requires>
		<import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.requests"/>
		<import addon="script.module.resolveurl" version="5.1.173"/>
		<import addon="script.module.six" version="1.11.0"/>
		<import addon="repository.xstreamreborn" version="1.0"/>
		<import addon="repository.resolveurl" optional="true"/>
		<import addon="script.module.inputstreamhelper" version="0.3.3" optional="true"/>
		<import addon="script.module.pydevd" optional="true" />
		<import addon="script.module.web-pdb" optional="true" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
    <extension point="xbmc.service" library="service.py" start="startup" />
	<extension point="xbmc.addon.metadata">
		<summary lang="de">xStream Reborn</summary>
		<summary lang="en_GB">xStream Reborn</summary>
		<description lang="de">xStream Reborn ist ein Video-Addon für Kodi. Es dient als Suchmaschine für Filme und Serien auf verschiedenen Webseiten.</description>
		<description lang="en_GB">xStream Reborn is a video add-on for Kodi. It serves as a search engine for films and series on various websites.</description>
		<disclaimer lang="de">Sie können dieses Video Addon gerne verwenden. Der bereitgestellte Inhalt der Webseiten steht in keinem Bezug zu xStream Reborn oder den Entwicklern! Weitere Informationen finden Sie in unserer Wiki und FAQ.</disclaimer>
		<disclaimer lang="en_GB">You are welcome to use this video addon. The content provided on the websites has no connection to xStream Reborn or the developers! For more information, see our Wiki and FAQ.</disclaimer>
		<language>de en</language>
		<platform>all</platform>
		<license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
		<website>https://streamxstream.github.io/xStreamRepoWeb/</website>
		<source>https://github.com/streamxstream</source>
		<assets>
			<icon>resources/icon.png</icon>
			<fanart>resources/fanart.jpg</fanart>
			<banner>resources/banner.png</banner>
			<clearlogo>resources/clearlogo.png</clearlogo>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
			<screenshot>resources/screenshot-04.jpg</screenshot>
		</assets>
	</extension>
</addon>